.collection-toggle {
	padding-top: 20px;
	text-align: center;
	text-decoration: none;
	font-size: 15px;
	font-weight: 700;
	letter-spacing: 2px;
	margin-bottom: -20px;
	letter-spacing: 2px;
}
.collection-toggle a {
	text-decoration: none;
	font-weight: normal;
}

.name-lead-in {
	text-align: center;
	font-size: 20px;
	font-weight: 300;
}

#post_title {
	width: 500px;
	max-width: 90%;
	border: 0;
	margin: 0px 5%;
}
.submit-action {
	margin: 0 auto;
	width: 70px;
}


.submit-button {
	display: block;
	border: 0;
	width: 70px;
	height: 60px;
	margin: 0;
	background: url(<%= asset_data_uri 'add-button.png' %>) no-repeat;
	cursor: pointer;
}

.submit-hovering .submit-button {
	background: url(<%= asset_data_uri 'add-button-hover.png' %>) no-repeat;
}