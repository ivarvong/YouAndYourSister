.post {
	padding: 10px;
	margin: 20px;
	text-align: center;
	position: relative;
}

.post h1 {
	font-family: Helvetica;
	font-size: 40px;
	padding: 0 100px;
	line-height: 1.1em;
	font-weight: 900;
	color: #000;
	margin: 0;
}

.post .like-button {
	font-size: 30px;
}

.post .meta {
	position: absolute;
	left: 45%;
	bottom: 0px;
	width: 10%;
	text-align: center;
	font-weight: 300;
}

.new-post {
	margin-top: -10px	;
