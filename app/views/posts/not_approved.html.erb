<% if @posts.count == 0 %>
	<h2>There aren't any un-approved posts!</h2>
<% end %>

<% @posts.each do |post| %>
      <div class="post" data-post-id="<%= post.id %>">
        <h2><%= post.title %></h2>
      
      <%= link_to 'Approve!', approve_post_path(post), method: :post, data: { confirm: 'This will approve the post and make it public. Are you sure?' } %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'This will delete the post forever. Are you sure?' } %>.
      
      </div>
<% end %>

